                    {% else %} 
                       <td> no </td>
                       <td><a class="btn btn-secondary bg-vbl rounded-pill" href="{{path('reactivateConsultant',{'id':consultant.id,'slug': app.user.slug})}}">activer </a> </td>
                    {% endif %}
                </tr>
            </tbody>
        {% endfor %}


    </table> 

    <h4><a class="btn btn-dark bg-vbl rounded-pill col-sm-4 offset-sm-4" href="{{path('addConsultant',{'slug':app.user.slug})}}"> Ajouter un collaborateur</a> </h4>

