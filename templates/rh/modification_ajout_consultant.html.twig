{% extends 'base.html.twig' %}

{% block body %} 
 <h1 class="py-3 text-center">Ajouter/Modifier  un Consultant</h1>
    <table class="table table-responisve-sm">
        <thead>
        <tr class ="bg-vbl-1">
            <th> Pr√©nom </th>
