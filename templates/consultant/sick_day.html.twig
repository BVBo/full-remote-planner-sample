{% extends 'base.html.twig' %} 

{% block title %}Déclaration de l'arrêt maladie{% endblock %}

{% block body %} 

<div class="container">

    <h1 class="py-3 text-center">Déclarer son arrêt maladie</h1>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    {{ form_widget(form) }} 

    <button type="submit" class="btn btn-primary bg-warning bg-vbl rounded-pill col-sm-4 offset-sm-4">Enregistrer</button>

    {{ form_end(form) }}
</div>

{% endblock %}




